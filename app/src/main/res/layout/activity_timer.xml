<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0F0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="75dp"
            android:textColor="#00688B"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/timerMs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".0000"
            android:textColor="#00688B"
            android:textSize="15dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Timer"
        android:onClick="startClick"
        android:background="@drawable/btn_beige"/>
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Timer"
        android:onClick="stopClick"
        android:background="@drawable/btn_beige"/>
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Timer"
        android:onClick="resetClick"
        android:background="@drawable/btn_beige"/>
    <Button
        android:id="@+id/btn_addLap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add A Lap"
        android:onClick="addLap"
        android:background="@drawable/btn_beige"/>
    <Button
        android:id="@+id/btn_clearLaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Laps"
        android:onClick="clearLaps"
        android:background="@drawable/btn_beige"/>
    <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:background="@drawable/list_style">
    </ListView>
</LinearLayout>